<h1>Editing Book</h1>


<%= form_for(@book) do |f| %>
		<%= f.label :Title %>
	<div class="field" id="book_title">
		<%= f.text_field :title %>
	</div>
		<%= f.label :Body %>
	<div class="field" id="book_body">
		<%= f.text_area :body %>
	</div>
	<div class="actions">
		<%= f.submit 'Update Book' %>
	</div>

<% end %>

<%= link_to "Show", book_path(@book) %>
